{
  "manifest_version": 2,

  "name": "Betterlink",
  "description": "Create and share personalized links to text within a webpage",
  "version": "1.4",

  "author": "Betterlink",
  "homepage_url": "http://betterlink.io",

  "icons": { "48": "icons/betterlink-icon-48.png",
             "128": "icons/betterlink-icon-128.png" },
  "incognito": "spanning",
  "short_name": "Betterlink",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js", "broadcaster.js"],

    // Goal is to make the background scripts execute as Event Pages
    // https://developer.chrome.com/extensions/event_pages
    //
    // The webRequest API isn't supported by Event Pages, so we need
    // to wait until declarativeWebRequest is stable
    // https://developer.chrome.com/extensions/declarativeWebRequest
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["injector.js"],
      "run_at": "document_idle"
    }
  ],

  "externally_connectable": {
    "matches": ["*://*.betterlink.io/*"]
  }
}
